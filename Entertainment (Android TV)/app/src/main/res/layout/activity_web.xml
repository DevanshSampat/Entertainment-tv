<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WebActivity"
    android:id="@+id/warn_layout">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true"
        android:text="@string/wifi"
        android:textSize="20sp"
        android:layout_marginBottom="30dp"
        android:id="@+id/wifi"
        android:background="#43A047"
        android:textColor="@android:color/white"
        android:onClick="turnOnWifi"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/wifi"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:text="@string/refresh"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@android:color/holo_red_light"
        android:id="@+id/refresh"
        android:textColor="@android:color/white"
        android:onClick="refresh"/>
    <Button
        android:layout_width="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/refresh"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="#0C61C8"
        android:text="Explore Downloads"
        android:id="@+id/goto_download"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:onClick="showDownloadedVideos"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are Offline"
        android:layout_above="@id/goto_download"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:textSize="40sp"
        android:id="@+id/warning"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_above="@id/warning"
        android:src="@drawable/ic_baseline_phonelink_erase_24"/>

</RelativeLayout>