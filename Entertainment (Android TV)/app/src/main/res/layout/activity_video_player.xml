<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/black"
    tools:context=".VideoPlayerActivity"
    android:id="@+id/video_layout">

    <VideoView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:id="@+id/video" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:background="#80000000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:id="@+id/subtitle"/>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#000000"
        android:layout_centerInParent="true"
        android:id="@+id/vol_bright_info"
        app:cardCornerRadius="16dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/vol_bright_image"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_baseline_volume_up_24"/>
            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progress="50"
                android:progressBackgroundTint="#000000"
                android:progressTint="@android:color/holo_red_light"
                android:id="@+id/vol_bright_progress"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/vol_bright_text"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:text="100%"
                android:textAlignment="center"
                android:layout_margin="5dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/blackish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A3000000"
        android:visibility="gone" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/forward"
        android:layout_below="@id/video_title"
        android:layout_above="@id/track_select"
        android:layout_alignEnd="@id/track_select">
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
            android:id="@+id/list_of_audio_tracks"
            android:background="@android:color/white"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="25dp"
        android:text="Video Title"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/view_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/video_title"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="0 Views"
        android:textColor="#CCCCCC"
        android:textSize="14sp" />
    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:id="@+id/load"
        android:indeterminateTint="@android:color/darker_gray"/>
    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        android:id="@+id/lock"
        app:cardBackgroundColor="#000000"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/selectable_background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_baseline_lock_24"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toStartOf="@id/lock"
        android:layout_alignTop="@id/lock"
        app:cardBackgroundColor="@android:color/holo_red_light"
        app:cardCornerRadius="20dp"
        android:id="@+id/close"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/selectable_background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_baseline_close_24_white"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toEndOf="@id/lock"
        android:layout_alignTop="@id/lock"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@android:color/holo_blue_dark"
        android:id="@+id/minimize"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_baseline_picture_in_picture_24"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:id="@+id/center_apparent"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_baseline_pause_circle_outline_24"
        android:foreground="@drawable/selectable_background"
        android:id="@+id/pause_button"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_baseline_play_circle_outline_24"
        android:foreground="@drawable/selectable_background"
        android:id="@+id/play_button"
        android:visibility="gone"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/center_apparent"
        android:layout_marginEnd="50dp"
        android:foreground="@drawable/selectable_background"
        android:src="@drawable/ic_baseline_replay_10_24"
        android:id="@+id/rewind"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/center_apparent"
        android:layout_marginStart="50dp"
        android:foreground="@drawable/selectable_background"
        android:src="@drawable/ic_baseline_forward_10_24"
        android:id="@+id/forward"/>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="20dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressTint="#CCCCCC"
        android:layout_alignTop="@id/seekbar"
        android:layout_alignBottom="@id/seekbar"
        android:layout_alignStart="@id/seekbar"
        android:layout_alignEnd="@id/seekbar"
        android:layout_marginHorizontal="20dp"
        android:scaleY="0.5"
        android:id="@+id/buffered_progress"
        android:visibility="gone"/>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_above="@id/lock"
        android:progressTint="@android:color/holo_red_light"
        android:thumbTint="@android:color/holo_red_light"
        android:progressBackgroundTint="@android:color/white"
        android:background="@drawable/selectable_background"
        android:id="@+id/seekbar"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_baseline_screen_rotation_24"
        android:id="@+id/rotate"
        android:layout_alignEnd="@id/seekbar"
        android:layout_marginEnd="20dp"
        android:layout_above="@id/seekbar"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:foreground="?android:attr/selectableItemBackground"/>
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/track_select"
        android:layout_alignEnd="@+id/seekbar"
        android:layout_above="@id/seekbar"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/selectable_background"
        android:src="@drawable/ic_baseline_music_note_24"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"/>
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toStartOf="@id/track_select"
        android:layout_alignBottom="@id/track_select"
        android:layout_marginEnd="20dp"
        android:id="@+id/subtitle_button"
        android:onClick="toggleSubtitles"
        android:src="@drawable/ic_baseline_closed_caption_24"
        android:background="@drawable/selectable_background"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/seekbar"
        android:text="00:00 / 00:00"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/white"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/time_track"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/selectable_background" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/seekbar"
        android:text="00:00 / 00:00"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/time_track_center"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/selectable_background"
        android:visibility="gone"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            android:id="@+id/previous_episode"
            android:foreground="@drawable/selectable_background"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_skip_previous_24"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:foreground="@drawable/selectable_background"
            android:id="@+id/next_episode"
            android:src="@drawable/ic_baseline_skip_next_24"/>
</RelativeLayout>